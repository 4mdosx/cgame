// alawys use prisma format to format the schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL") // uses connection pooling
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  ghost     Ghost?
}

model Ghost {
  id     Int    @id @default(autoincrement())
  userId Int    @unique
  user   User   @relation(fields: [userId], references: [id])
  name   String
  credit Int
  tech   Json
  arks   Ark[]
}

model Ark {
  id         Int    @id @default(autoincrement())
  position   String
  facilities Json
  attributes Json
  ghostId    Int
  ghost      Ghost  @relation(fields: [ghostId], references: [id])
}

model AccessPort {
  id          String @id @unique
  environment String
  facilities  Json
  attributes  Json
}
